---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";

const { title = "Mitchell Cornwell | Software Engineer" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    {/* Enable view transitions site-wide */}
    <ViewTransitions />
  </head>

  <body class="min-h-full bg-charcoal text-bone">
    <div class="mx-auto max-w-5xl px-4 py-8">
      {/* UNDER CONSTRUCTION: Blur header - remove "blur-sm pointer-events-none" to undo */}
      <header class="mb-10 blur-sm pointer-events-none">
        <nav class="flex gap-6 text-sm font-medium text-mushroom">
          <a href="/" class="hover:text-sage">Home</a>
          <span class="text-pewter">|</span>
          <a href="/projects" class="hover:text-sage">Projects</a>
          <span class="text-pewter">|</span>
          <a href="/games" class="hover:text-sage">Games</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer class="mt-16 border-t border-pewter pt-6 text-xs text-mushroom">
        <p>© {new Date().getFullYear()} Mitchell Cornwell. Built with Astro, TypeScript & Tailwind.</p>
      </footer>
    </div>
  </body>
</html>
